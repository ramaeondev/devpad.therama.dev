{
  "name": "devpad",
  "version": "0.0.0",
  "private": true,
  "description": "DevPad - Modern, standalone-component based note-taking application with Angular Signals, Tailwind CSS, and Supabase",
  "homepage": "https://devpad.therama.dev",
  "author": "Ramaeon",
  "license": "MIT",
  "engines": {
    "node": ">=20 <21"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "angular",
    "angular-20",
    "typescript",
    "tailwindcss",
    "supabase",
    "standalone-components",
    "signals",
    "markdown-editor",
    "note-taking"
  ],
  "features": [
    "Standalone Components Architecture",
    "Angular Signals State Management",
    "Responsive Design",
    "Dark/Light Mode with System Preference",
    "Tailwind CSS + Custom Design System",
    "Markdown Editor with Live Preview",
    "Supabase Backend",
    "Real-time Sync",
    "Folder Organization",
    "Search & Filter",
    "Accessibility (WCAG 2.1 AA)",
    "PWA Support"
  ],
  "scripts": {
    "ng": "ng",
    "prestart": "npm run inject-env",
    "start": "ng serve",
    "prebuild": "npm run inject-env",
    "build": "ng build",
    "prebuild:prod": "npm run inject-env",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "format": "prettier --write \"src/**/*.{ts,html,scss,css,json}\"",
    "lint": "eslint \"src/**/*.{ts,html}\" --ext .ts,.html --max-warnings=0",
    "lint:fix": "eslint \"src/**/*.{ts,html}\" --ext .ts,.html --fix",
    "analyze": "ng build --configuration production --stats-json && webpack-bundle-analyzer dist/devpad/stats.json",
    "inject-env": "node scripts/inject-env.js",
    "changelog:update": "node scripts/update-changelog-appwrite.js",
    "db:backup": "node scripts/db-backup.js"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/animations": "^20.3.11",
    "@angular/cdk": "^20.2.12",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-browser-dynamic": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@angular/service-worker": "^20.3.11",
    "@fingerprintjs/fingerprintjs": "^5.0.1",
    "@honeybadger-io/js": "^6.12.3",
    "@supabase/supabase-js": "^2.81.1",
    "appwrite": "^21.4.0",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.0",
    "marked-highlight": "^2.2.3",
    "ngx-image-cropper": "^9.1.5",
    "node-appwrite": "^20.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-eslint/eslint-plugin": "^16.0.0",
    "@angular-eslint/eslint-plugin-template": "^16.0.0",
    "@angular-eslint/template-parser": "^16.0.0",
    "@angular/build": "^20.3.10",
    "@angular/cli": "^20.3.10",
    "@angular/compiler-cli": "^20.3.0",
    "@babel/preset-env": "^7.28.5",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/jest": "^30.0.0",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "autoprefixer": "^10.4.22",
    "babel-jest": "^30.2.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-junit": "^13.2.0",
    "jest-preset-angular": "^16.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.1.0",
    "typescript": "~5.9.2",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
