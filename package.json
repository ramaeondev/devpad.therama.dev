{
  "name": "devpad",
  "version": "0.0.0",
  "private": true,
  "description": "DevPad - Modern, standalone-component based note-taking application with Angular Signals, Tailwind CSS, and Supabase",
  "homepage": "https://devpad.therama.dev",
  "author": "Ramaeon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "angular",
    "angular-20",
    "typescript",
    "tailwindcss",
    "supabase",
    "standalone-components",
    "signals",
    "markdown-editor",
    "note-taking"
  ],
  "features": [
    "Standalone Components Architecture",
    "Angular Signals State Management",
    "Responsive Design",
    "Dark/Light Mode with System Preference",
    "Tailwind CSS + Custom Design System",
    "Markdown Editor with Live Preview",
    "Supabase Backend",
    "Real-time Sync",
    "Folder Organization",
    "Search & Filter",
    "Accessibility (WCAG 2.1 AA)",
    "PWA Support"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:coverage": "ng test --code-coverage",
    "format": "prettier --write \"src/**/*.{ts,html,scss,css,json}\"",
    "analyze": "ng build --configuration production --stats-json && webpack-bundle-analyzer dist/devpad/stats.json"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/animations": "^20.3.11",
    "@angular/cdk": "^20.2.12",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/material": "^20.2.12",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@angular/service-worker": "^20.3.11",
    "@ng-icons/core": "^32.4.0",
    "@ng-icons/material-file-icons": "^32.4.0",
    "@supabase/supabase-js": "^2.81.1",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.0",
    "marked-highlight": "^2.2.3",
    "ngx-image-cropper": "^9.1.5",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.10",
    "@angular/cli": "^20.3.10",
    "@angular/compiler-cli": "^20.3.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/jasmine": "~5.1.0",
    "@types/marked": "^5.0.2",
    "autoprefixer": "^10.4.22",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.2",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
